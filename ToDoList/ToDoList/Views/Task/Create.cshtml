@model ToDoList.Data.Models.Task

@{
    ViewData["Title"] = "Create";
}

<div class="my-4">
    <h1 class="text-lg text-white">Създай задача</h1>
</div>
<div class="row">
    <div class="col-md-4 text-white">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="bg-gray-800 hover:bg-gray-700 shadow appearance-none border-2 border-gray-800 focus:border-gray-400 rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="bg-gray-800 hover:bg-gray-700 shadow appearance-none border-2 border-gray-800 focus:border-gray-400 rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" rows="4"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateAndTime" class="control-label">Дата и Час</label>
                <input asp-for="DateAndTime" class="bg-gray-800 hover:bg-gray-700 shadow appearance-none border-2 border-gray-800 focus:border-gray-400 rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" />
                <span asp-validation-for="DateAndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Създай" class="text-decoration-none text-white hover:bg-blue-700 bg-blue-800 p-2" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index" class="text-decoration-none text-white hover:bg-gray-700 bg-gray-800 p-2"><< Обратно към списъка</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
